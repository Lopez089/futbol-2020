                        .mt-3.mb-3.col-md-4.col-sm-4.col-lg-4.d-flex.align-content-center.justify-content-center
                            p=equipo.hora
                    .row.col-sm-12.col-lg-12.col-md-12
                        .flex-column.col-md-4.col-sm-4.col-lg-4.d-flex.align-content-center.justify-content-center
                            .row.d-flex.align-content-center.justify-content-center.mt-3
                                img(src=`${equipo.logo1}`)
                            .row.d-flex.align-content-center.justify-content-center
                                p=equipo.eq1
                        .col-md-4.col-sm-4.col-lg-4.d-flex.align-content-center.justify-content-center.text-center
                            h1.display-1.h-75.w-100.mt-4.border-right.border-left=equipo.ResultadoFinal1 +'-' + equipo.ResultadoFinal2
                        .flex-column.col-md-4.col-sm-4.col-lg-4.d-flex.align-content-center.justify-content-center
                            .row.d-flex.align-content-center.justify-content-center.mt-3
                                img(src=`${equipo.logo2}`)
                            .row.d-flex.align-content-center.justify-content-center
                                p=equipo.eq2
        else
            .container-fluid.d-flex.align-content-center.justify-content-center
